    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug App_Name",
            "skipFiles": [
                "./path/of/file/to/skip/when/debugging"
            ],
            "program": "server.js",
            "restart": true,
            "runtimeExecutable": "nodemon",
            "console": "integratedTerminal"
        }
    ],
        "compilerOptions": {
        "module": "commonjs",
        "target": "es2016",
        "jsx": "preserve",
        "baseUrl": "./src",
        "checkJs": true
        },
        "exclude": [
        "node_modules",
        "**/node_modules/*"
        ],
    "scripts": {
        "start": "nodemon"
    }
}